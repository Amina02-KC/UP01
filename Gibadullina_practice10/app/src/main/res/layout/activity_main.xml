<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Задание 1"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/a_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:ems="5"
        android:hint="Введите A"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/b_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/a_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:ems="5"
        android:hint="Введите B"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/c_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/b_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:ems="5"
        android:hint="Введите C"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="90dp" />


    <TextView
        android:id="@+id/v_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_et"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="V ="
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="387dp" />

    <TextView
        android:id="@+id/s_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_tv"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:text="S ="
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="387dp" />

    <Button
        android:id="@+id/calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="OnClick"
        android:text="Вычислить"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_tv" />

    <Button
        android:id="@+id/secondpage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="startNewActivity"
        android:text="Задание 2"
        app:layout_constraintTop_toBottomOf="@+id/calc_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="141dp" />

</androidx.constraintlayout.widget.ConstraintLayout>